{
  "name": "dizziness",
  "display_name": "Dizziness",
  "description": "Evaluation of dizziness, vertigo, lightheadedness, and balance issues",
  "slots": {
    "onset": {
      "type": "categorical",
      "question": "When did the dizziness start? Was it sudden or gradual?",
      "options": ["sudden", "gradual"],
      "required": true
    },
    "duration": {
      "type": "text",
      "question": "How long have you been experiencing dizziness? (e.g., hours, days, weeks)",
      "required": true
    },
    "pattern": {
      "type": "categorical",
      "question": "Is the dizziness constant or does it come and go?",
      "options": ["constant", "intermittent", "positional"],
      "required": true
    },
    "severity": {
      "type": "scale",
      "question": "On a scale of 1-10, how severe is your dizziness?",
      "range": [1, 10],
      "required": true
    },
    "type": {
      "type": "categorical",
      "question": "What type of dizziness is it? Does the room spin (vertigo), or do you feel lightheaded/unsteady?",
      "options": ["spinning/vertigo", "lightheaded", "unsteady/off-balance", "floating"],
      "required": true
    },
    "triggers": {
      "type": "text",
      "question": "What triggers the dizziness? (e.g., standing up, head movement, position change)",
      "required": false
    },
    "associated_symptoms": {
      "type": "multi_select",
      "question": "Do you have any of these symptoms along with dizziness: hearing loss, ringing in ears, nausea, vomiting, headache, weakness, vision changes, chest pain, palpitations, confusion?",
      "options": [
        "hearing_loss",
        "tinnitus",
        "nausea",
        "vomiting",
        "headache",
        "weakness",
        "vision_changes",
        "chest_pain",
        "palpitations",
        "confusion",
        "sweating",
        "none"
      ],
      "required": true
    },
    "recent_head_injury": {
      "type": "boolean",
      "question": "Have you had any recent head injury or trauma?",
      "required": true
    },
    "medications": {
      "type": "boolean",
      "question": "Have you started any new medications recently?",
      "required": false
    }
  },
  "pending_slots": [
    "onset",
    "duration",
    "type",
    "pattern",
    "severity",
    "associated_symptoms",
    "recent_head_injury"
  ],
  "completion_threshold": 5,
  "triage_rules": [
