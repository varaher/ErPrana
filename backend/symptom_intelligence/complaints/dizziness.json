      "conditions": [
        {
          "slot": "associated_symptoms",
          "operator": "includes_any",
          "value": ["chest_pain", "palpitations"]
        },
        {
          "slot": "severity",
          "operator": ">=",
          "value": 7
        }
      ],
      "triage_level": "ðŸŸ§ Orange",
