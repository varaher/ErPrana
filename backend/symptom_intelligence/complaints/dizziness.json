        {
          "slot": "associated_symptoms",
          "operator": "includes_any",
          "value": ["weakness", "vision_changes", "confusion", "headache"]
        },
        {
          "slot": "onset",
          "operator": "equals",
          "value": "sudden"
        }
      ],
      "triage_level": "ðŸŸ¥ Red",
